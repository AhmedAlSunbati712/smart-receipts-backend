generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String    @id @unique @default(uuid())
  username  String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  receipts  Receipt[]
}

model Receipt {
  id        String   @id @unique @default(uuid())
  vendor    String
  total     Float
  date      DateTime
  rawText   String // OCR extracted text
  imageUrl  String // if you store images in S3 or Cloudinary later
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  userId String

  items ReceiptItem[]
}

model ReceiptItem {
  id       String @id @unique @default(uuid())
  name     String
  price    Float
  quantity Int

  receipt   Receipt @relation(fields: [receiptId], references: [id])
  receiptId String
}
